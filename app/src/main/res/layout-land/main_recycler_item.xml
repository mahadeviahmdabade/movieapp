<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/grid_view_width"
        android:layout_height="@dimen/grid_view_height"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:background="@drawable/placeholder"
        />
    <TextView
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="@dimen/year_text_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="left"
        android:ellipsize="end"
        android:padding="@dimen/padding_five"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_text_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        android:gravity="left"
        android:ellipsize="end"
        android:padding="@dimen/padding_five"
        android:singleLine="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>